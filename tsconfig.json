{
  "compilerOptions": {
    "module": "ES2020", // Use ES module system (valid value for modern TypeScript versions)
    "target": "ESNext", // Output modern JavaScript
    "moduleResolution": "node", // Use Node.js-style module resolution
    "outDir": "./dist", // Output compiled files to the 'dist' folder
    "esModuleInterop": true, // Allows default imports with CommonJS modules
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "strict": true, // Optional: enables strict type-checking
    "allowJs": false, // Optional: Disallows JavaScript files
    "skipLibCheck": true, // Skips checking declaration files for faster builds
    "forceConsistentCasingInFileNames": true // Ensures consistent casing of filenames
  },
  "include": ["src/sp8d-core.ts", "src/sp8d-diagnostics.ts"],
  "exclude": ["node_modules"]
}
