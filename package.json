{
  "private": true,
  "name": "sp8d-monorepo",
  "description": "A TypeScript monorepo for sp8d: concurrent programming primitives, diagnostics, and test harness.",
  "keywords": [
    "sp8d",
    "sp8d-core",
    "sp8d-diagnostics",
    "ultra-low latency",
    "low-overhead",
    "cross-thread",
    "bounded protocol",
    "copilot",
    "web copilot",
    "AI copilot",
    "concurrency",
    "actor model",
    "async",
    "asynchronous",
    "channels",
    "message passing",
    "diagnostics",
    "debugging",
    "concurrent programming",
    "parallelism",
    "event-driven",
    "reactive",
    "state machines",
    "observability",
    "monitoring",
    "runtime analysis",
    "thread safety",
    "race condition detection",
    "deadlock detection",
    "performance monitoring",
    "distributed systems",
    "web workers",
    "worker threads",
    "multi-threading",
    "thread pool",
    "background processing",
    "isolation",
    "automation",
    "typescript",
    "javascript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SP8D/sp8d"
  },
  "author": "SP8D <admin@sp8d.com>",
  "license": "MIT",
  "homepage": "https://sp8d.github.io/",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.3",
    "esbuild": "^0.25.3",
    "express": "^5.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run core:build && npm run diagnostics:build && npm run harness:build",
    "test": "npm run test -w @sp8d/core && npm run test -w @sp8d/diagnostics && npm run test -w @sp8d/harness",
    "core:build": "npm run build -w @sp8d/core",
    "diagnostics:build": "npm run build -w @sp8d/diagnostics",
    "harness:build": "npm run build -w @sp8d/harness",
    "harness:dev": "npm run dev -w @sp8d/harness",
    "harness:preview": "npm run preview -w @sp8d/harness",
    "harness:test:e2e": "playwright test",
    "e2e": "npm run harness:test:e2e",
    "e2e:dist": "npm run build && playwright test --config=playwright.dist.config.ts"
  },
  "lint-staged": {
    "packages/{core,diagnostics,harness}/**/*": [
      "sh -c 'npm run e2e:dist'"
    ]
  },
  "type": "module"
}
