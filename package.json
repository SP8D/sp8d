{
  "private": true,
  "name": "sp8d-monorepo",
  "description": "Monorepo for sp8d packages",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.3",
    "esbuild": "^0.25.3",
    "express": "^5.1.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "npm run build -w @sp8d/core && npm run build -w @sp8d/diagnostics",
    "test": "npm run test:core",
    "test:core": "npx playwright test packages/core/test",
    "serve": "node serve.js",
    "prepare:netlify": "node scripts/prepare-netlify.js"
  },
  "type": "module"
}
